{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose-debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "up",
                "-d"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "docker-compose-stop",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "down"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "build-debug-image",
            "type": "shell",
            "command": "docker",
            "args": [
                "build",
                "-f",
                "Dockerfile.debug",
                "-t",
                "vfinance-api-debug",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "run-debug-container",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-d",
                "--name",
                "vfinance-api-debug-standalone",
                "-p",
                "3001:3000",
                "-p",
                "2345:2345",
                "--security-opt",
                "seccomp:unconfined",
                "--cap-add",
                "SYS_PTRACE",
                "vfinance-api-debug"
            ],
            "group": "build",
            "dependsOn": ["build-debug-image"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
} 